# Mr ECU - Environment Configuration Example
# Bu dosyayı .env olarak kopyalayın ve değerleri düzenleyin

# Site Ayarları
SITE_NAME="Mr ECU"
SITE_URL="http://localhost:8888/mrecuphp/"
SITE_EMAIL="info@mrecu.com"

# Veritabanı Ayarları
DB_HOST="localhost"
DB_NAME="mrecu_db"
DB_USERNAME="root"
DB_PASSWORD="root"
DB_CHARSET="utf8mb4"

# Email/SMTP Ayarları
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_ENCRYPTION="tls"

# Güvenlik Ayarları
SECURE_SALT="mr_ecu_2025_secure_salt_key_change_this"
SESSION_TIMEOUT=3600

# Dosya Yükleme Ayarları
MAX_FILE_SIZE=52428800
UPLOAD_DIR="uploads/"

# Kredi Sistemi Ayarları
DEFAULT_CREDITS=0
FILE_DOWNLOAD_COST=1

# Geliştirme Ayarları
DEBUG=true
ERROR_REPORTING=true
LOG_ERRORS=true

# Ödeme Entegrasyonları (Opsiyonel)
IYZICO_API_KEY=""
IYZICO_SECRET_KEY=""
IYZICO_BASE_URL="https://sandbox-api.iyzipay.com"

STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""

# Üçüncü Parti Servisler (Opsiyonel)
GOOGLE_ANALYTICS_ID=""
GOOGLE_RECAPTCHA_SITE_KEY=""
GOOGLE_RECAPTCHA_SECRET_KEY=""

# Cache Ayarları
CACHE_DRIVER="file"
CACHE_TTL=3600

# Session Ayarları
SESSION_DRIVER="file"
SESSION_LIFETIME=120

# Mail Queue Ayarları (Opsiyonel)
QUEUE_DRIVER="database"
MAIL_QUEUE=true

# API Ayarları
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60

# Backup Ayarları
BACKUP_DISK="local"
BACKUP_SCHEDULE="daily"

# Monitoring (Opsiyonel)
SENTRY_DSN=""
BUGSNAG_API_KEY=""

# Social Media Links (Opsiyonel)
FACEBOOK_URL=""
TWITTER_URL=""
INSTAGRAM_URL=""
LINKEDIN_URL=""

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistem bakım altındadır. Lütfen daha sonra tekrar deneyin."

# Timezone
APP_TIMEZONE="Europe/Istanbul"

# Locale
APP_LOCALE="tr"
APP_FALLBACK_LOCALE="en"
