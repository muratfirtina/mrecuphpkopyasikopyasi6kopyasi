# Mr ECU - Ortam Değişkenleri
# Bu dosyayı .env.example olarak kopyalayın ve kendi ayarlarınızla doldurun

# ===========================================
# VERİTABANI AYARLARI
# ===========================================
DB_HOST="127.0.0.1"
DB_NAME="mrecu_db_guid"
DB_USERNAME="root"
DB_PASSWORD="root"
DB_CHARSET="utf8mb4"
DB_PORT="8889"

# ===========================================
# SITE AYARLARI
# ===========================================
SITE_NAME="Mr ECU"
SITE_URL="http://localhost:8888/mrecuphpkopyasikopyasi6kopyasi"
BASE_URL="http://localhost:8888/mrecuphpkopyasikopyasi6kopyasi"
DEBUG=true
ENVIRONMENT=development

# ===========================================
# EMAIL AYARLARI (SMTP)
# ===========================================
# Email gönderimi için SMTP ayarları
SMTP_HOST=tumdex.com
SMTP_PORT=587
SMTP_USERNAME=newsletter@tumdex.com
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls

# Email gönderen bilgileri
SMTP_FROM_EMAIL=newsletter@tumdex.com
SMTP_FROM_NAME="Mr ECU"

# Email test modu (true = log dosyasına yaz, false = gerçek gönder)
EMAIL_TEST_MODE=false

# Email kuyruğu ayarları
EMAIL_QUEUE_ENABLED=true
EMAIL_MAX_ATTEMPTS=3
EMAIL_RETRY_DELAY=300

# ===========================================
# GÜVENLİK AYARLARI
# ===========================================
# Şifreleme anahtarı (32 karakter)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Session ayarları
SESSION_LIFETIME=7200
SESSION_NAME=mrecu_session

# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
MAX_PASSWORD_RESET_ATTEMPTS=3
MAX_EMAIL_PER_HOUR=10

# ===========================================
# DOSYA YÜKLEME AYARLARI
# ===========================================
# Maksimum dosya boyutu (bytes)
MAX_FILE_SIZE=52428800

# Upload dizini
UPLOAD_PATH=uploads/

# İzin verilen dosya türleri (boş bırakılırsa tümü)
ALLOWED_FILE_TYPES=

# ===========================================
# ÖDEME SİSTEMİ AYARLARI
# ===========================================
# PayTR ayarları (örnek)
PAYTR_MERCHANT_ID=
PAYTR_MERCHANT_KEY=
PAYTR_MERCHANT_SALT=

# Stripe ayarları (örnek)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# ===========================================
# LOG AYARLARI
# ===========================================
# Log seviyesi (debug, info, warning, error)
LOG_LEVEL=debug

# Log dosya yolu
LOG_PATH=logs/

# Email logları
EMAIL_LOG_ENABLED=true
EMAIL_LOG_PATH=logs/email.log

# ===========================================
# CACHE AYARLARI
# ===========================================
CACHE_ENABLED=false
CACHE_TYPE=file
CACHE_PATH=cache/
CACHE_LIFETIME=3600

# ===========================================
# SOSYAL MEDYA AYARLARI
# ===========================================
FACEBOOK_URL=https://facebook.com/mrecu
INSTAGRAM_URL=https://instagram.com/mrecu
TWITTER_URL=https://twitter.com/mrecu
YOUTUBE_URL=https://youtube.com/mrecu

# ===========================================
# GOOGLE SERVICES
# ===========================================
GOOGLE_ANALYTICS_ID=
GOOGLE_MAPS_API_KEY=
GOOGLE_RECAPTCHA_SITE_KEY=
GOOGLE_RECAPTCHA_SECRET_KEY=

# ===========================================
# BACKUP AYARLARI
# ===========================================
BACKUP_ENABLED=false
BACKUP_PATH=backups/
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# ===========================================
# MAINTENANCE MODU
# ===========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistemimiz bakım altındadır. Kısa süre içinde geri döneceğiz."

# ===========================================
# API AYARLARI
# ===========================================
API_ENABLED=false
API_KEY=your-api-key-here
API_RATE_LIMIT=100

# ===========================================
# NOTIFICATION AYARLARI
# ===========================================
# SMS ayarları (iletimerkezi.com örnek)
SMS_ENABLED=false
SMS_API_KEY=
SMS_API_SECRET=
SMS_SENDER_NAME=MRECU

# Push notification ayarları
PUSH_NOTIFICATIONS_ENABLED=false
FCM_SERVER_KEY=

# ===========================================
# MONITORING AYARLARI
# ===========================================
MONITORING_ENABLED=false
ERROR_REPORTING_EMAIL=admin@mrecu.com

# Sentry (hata takibi)
SENTRY_DSN=

# ===========================================
# CDN AYARLARI
# ===========================================
CDN_ENABLED=false
CDN_URL=
CDN_API_KEY=

# ===========================================
# THIRD PARTY SERVICES
# ===========================================
# reCAPTCHA
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Email validation service
EMAIL_VALIDATION_API_KEY=

# IP geolocation
IP_GEOLOCATION_API_KEY=
